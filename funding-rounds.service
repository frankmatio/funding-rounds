[Unit]
Description=Funding Rounds Data Collection Pipeline V2
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/funding-rounds/v2_parallel_db

# Environment
Environment="PATH=/opt/funding-rounds/v2_parallel_db/venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/funding-rounds/.env

# Execute pipeline
ExecStart=/opt/funding-rounds/v2_parallel_db/venv/bin/python3 run_pipeline_v2.py --full --workers 4

# Restart policy
Restart=on-failure
RestartSec=30

# Logging
StandardOutput=append:/opt/funding-rounds/v2_parallel_db/data/logs/systemd-output.log
StandardError=append:/opt/funding-rounds/v2_parallel_db/data/logs/systemd-error.log

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/funding-rounds/v2_parallel_db/data

[Install]
WantedBy=multi-user.target
